{
    "name": "tsuibami",
    "version": "0.1",
    "manifest_version": 2,

    "description": "mini editor for esa",

    "permissions": [
        "storage",
        "https://api.esa.io/v1/"
    ],

    "options_page": "options.html",

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+I",
                "mac": "Command+I"
            }
        }
    },

    "browser_action": {
        "default_icon": "tsuibami-icon.png",
        "default_title": "tsuibami",
        "default_popup": "index.html"
    },

    "icons": {
        "16"  : "tsuibami-icon.png",
        "48"  : "tsuibami-icon.png",
        "128" : "tsuibami-icon.png"
    }
}
